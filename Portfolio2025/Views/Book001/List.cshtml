@using Portfolio2025.Models.Book001
@model List<Book>
@{
    ViewData["Title"] = "Book List";
}
<h1>Book List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in @Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-controller="Book001" asp-action="Detail"
                       asp-route-id="@book.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
