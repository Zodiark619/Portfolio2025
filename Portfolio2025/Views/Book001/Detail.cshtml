@model Book
@{
    ViewData["Title"] = "Book Detail";
}
<h1>Book Detail</h1>
<table class="table table-bordered table-striped">
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Title</td>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <td>Author</td>
        <td>@Model.Author</td>
    </tr>

    <tr>
        <td>Language</td>
        <td>@Model.Language</td>
    </tr>

    <tr>
        <td>First Published</td>
        <td>@Model.FirstPublished</td>
    </tr>

    <tr>
        <td>Sales in Millions</td>
        <td>@Model.SalesInMillions</td>
    </tr>

    <tr>
        <td>Genre</td>
        <td>@(@Model.Genre??"Unknown")</td>
    </tr>
</table>
